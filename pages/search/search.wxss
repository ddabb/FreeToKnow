/* pages/search/search.wxss */
.search-wrapper {
  padding: 30rpx;
  height: 100%;
}

.search {
  box-sizing: border-box;
  border-radius: 80rpx;
  height: 80rpx;
  padding: 0 0 0 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
  font-size: 28rpx;
  border: 1px solid rgba(41, 157, 255, .7);
}

.search image {
  height: 36rpx;
  width: 36rpx;

  margin-right: 20rpx;
}

input {
  border: none;
  flex: 1;
}

.search text {
  padding: 20rpx 40rpx 20rpx 30rpx;
  background: #299DFF;
  color: #fff;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.history {
  margin-top: 30rpx;
  font-size: 28rpx;
  padding: 30rpx;
  color: #555;
  position: relative;
}

.history view {
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
}

.history .title {
  color: #299DFF;
}

.history view text {
  border: 1px solid #ddd;
  padding: 8rpx 50rpx;
  border-radius: 40rpx;
  margin: 20rpx 30rpx 20rpx 0;
}

.clear {
  color: #888;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.box {
  padding: 30rpx 0;
}

.box .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  background: #fff;
  height: 160rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.box .item-inner {
  width: 92%;
  font-size: 24rpx;
  color: #555;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.box .item-inner view {
  font-size: 30rpx;
  color: #333;
  padding-top: 10rpx;
  padding-left: 20rpx;
  line-height: 1.7;
  font-weight: bold;
}

.box .item-inner text {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
}