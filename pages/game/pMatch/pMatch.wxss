.container {
  color: #776e65;
  background-color: #faf8ee;
  height: 100vh;
  position: relative;
}

.head {
  text-align: center;
  position: absolute;
  top: 2vh;
}

.lside {
  width: 100px;
  height: 100px;
  box-sizing: border-box;
  float: left;
  position: relative;
  margin-right: 30px;
}

.title {
  font-size: 40px;
  font-weight: bold;
  position: absolute;
  bottom: 50px;
  left: 10px;
}

.play {
  font-size: 20px;
  width: 100px;
  height: 100px;
  background-color: #bbada0;
  color: #fff;
  border-radius: 5px;
  width: 130px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-weight: bold;
}

.rside {
  background-color: #bbada0;
  float: right;
  width: 100px;
  height: 100px;
  padding-top: 10px;
  box-sizing: border-box;
  border-radius: 5px;
  opacity: 0.7;
}

.rside text {
  display: block;
  text-align: center;
  font-size: 30px;
  font-weight: bold;
}

.score {
  color: #fff;
}

/* =========================== game ====================  */
.game {
  margin-top: -10rpx;
  padding-top: 5vw;
  padding-left: 1vw;
  background: #bbada0;
  border-radius: 6px;
  width: 93vw;
  height: 93vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;
  /* 禁用系统默认菜单 */
  -ms-touch-callout: none;
  -webkit-user-select: none;
  /* css控制文字不能被选中 */
  -moz-user-select: none;
  -ms-user-select: none;
  /* 当触控事件发生在元素上时，不进行任何操作 */
  -ms-touch-action: none;
  touch-action: none;
}

